{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@common/*": ["./src/modules/Common/*"],
      "@welcome/*": ["./src/modules/WelcomeView/*"],
      "@missings/*": ["./src/modules/MissingsView/*"],
      "@report/*": ["./src/modules/ReportView/*"],
      "@detailedMissing/*": ["./src/modules/DetailedMissingView/*"],
    }
  },
  "include": ["/src"],
}


